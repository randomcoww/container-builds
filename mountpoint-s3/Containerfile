FROM registry.fedoraproject.org/fedora-minimal:latest@sha256:f01563340c5983ed9de51d2614800721a374face5ed73d9843ba2906f0a1d99a

ARG VERSION
ARG INTERNAL_CA_CERT

RUN set -x \
  \
  && mkdir -p /etc/pki/ca-trust/source/anchors \
  && echo -e "$INTERNAL_CA_CERT" > /etc/pki/ca-trust/source/anchors/ca-cert.pem \
  && update-ca-trust \
  && microdnf install -y \
    https://s3.amazonaws.com/mountpoint-s3-release/$VERSION/$(arch)/mount-s3-$VERSION-$(arch).rpm \
  && microdnf clean all \
  && rm -rf \
    /var/cache \
    /var/log/*
