FROM registry.fedoraproject.org/fedora-minimal:latest@sha256:c0d6d86bf1a5cf9fcda61516bfb4681327daf6dee3ab6654d0c7ba2e7798bdda

ARG VERSION
ARG INTERNAL_CA_CERT

RUN set -x \
  \
  && mkdir -p /etc/pki/ca-trust/source/anchors \
  && echo -e "$INTERNAL_CA_CERT" > /etc/pki/ca-trust/source/anchors/ca-cert.pem \
  && update-ca-trust \
  && microdnf install -y \
    https://s3.amazonaws.com/mountpoint-s3-release/$VERSION/$(arch)/mount-s3-$VERSION-$(arch).rpm \
  && microdnf clean all \
  && rm -rf \
    /var/cache \
    /var/log/*
