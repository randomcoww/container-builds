FROM docker.io/alpine:latest

ARG PKGNAME=hostapd-noscan

COPY buildconfig /usr/src/
RUN set -x \
  \
  && apk add --no-cache --virtual .build-deps \
    git \
    libnl3-dev \
    openssl-dev \
    linux-headers \
    make \
    g++ \
  \
  && cd /usr/src \
  && git clone --depth=1 https://aur.archlinux.org/$PKGNAME.git hostapd \
  && wget -O hostapd.tar.gz https://w1.fi/releases/hostapd-$(cat hostapd/PKGBUILD | grep ^pkgver | sed 's/pkgver=//').tar.gz \
  && tar xf hostapd.tar.gz --strip-components=1 -C hostapd \
  && cd hostapd \
  && git apply -p0 noscan.patch \
  \
  && cd hostapd \
  && mv /usr/src/buildconfig .config \
  && cat defconfig >> .config \
  && make -j $(getconf _NPROCESSORS_ONLN) install \
  \
## cleanup
  && cd \
  && rm -rf /usr/src \
  \
  && runDeps="$( \
    scanelf --needed --nobanner --format '%n#p' --recursive /usr/local \
      | tr ',' '\n' \
      | sort -u \
      | awk 'system("[ -e /usr/local/lib/" $1 " ]") == 0 { next } { print "so:" $1 }' \
  )" \
  && apk add --no-cache --virtual .hostapd-rundeps $runDeps \
  && apk del .build-deps

ENTRYPOINT ["hostapd"]