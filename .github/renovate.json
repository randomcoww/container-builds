{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "reuseExistingBranch": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.+.ya?ml$/"
      ],
      "matchStrings": [
        "GOLANG_VERSION:\\s+(?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true,
      "groupName": "minor-update"
    }
  ]
}