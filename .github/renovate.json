{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dockerfile": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/workflows/.+.ya?ml$/"
      ],
      "matchStrings": [
        "GITHUB_RELEASE:\\s+(?<currentValue>[^\\s]+)\\s+#\\s+(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/workflows/.+.ya?ml$/"
      ],
      "matchStrings": [
        "GITHUB_TAG:\\s+(?<currentValue>[^\\s]+)\\s+#\\s+(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/workflows/.+.ya?ml$/"
      ],
      "matchStrings": [
        "IMAGE_RELEASE:\\s+(?<currentValue>[\\w.-]{1,127})(@(?<currentDigest>sha256:[a-f0-9]+))?\\s+#\\s+(?<depName>[^\\s]+)"
      ],
      "autoReplaceStringTemplate": "IMAGE_RELEASE: {{{newValue}}}@{{{newDigest}}} # {{{depName}}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/workflows/.+.ya?ml$/"
      ],
      "matchStrings": [
        "GOLANG_VERSION:\\s+(?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "versioning": "docker"
    },
    {
      "matchPackageNames": [
        "gitpod-io/openvscode-server",
        "isc-projects/kea",
        "awslabs/mountpoint-s3"
      ],
      "versioning": "regex:^(?<compatibility>.*)-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchPackageNames": [
        "minio/minio"
      ],
      "replacementVersionTemplate": "{{{replace '[^\\d]' '' currentValue}}}"
    },
    {
      "matchPackageNames": [
        "LizardByte/Sunshine"
      ],
      "ignoreUnstable": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true,
      "groupName": "minor-update"
    }
  ]
}