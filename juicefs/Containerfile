FROM alpine:latest

ARG VERSION

RUN set -x \
  \
  && wget -O jfs.tar.gz \
    https://github.com/juicedata/juicefs/releases/download/v$VERSION/juicefs-$VERSION-linux-amd64.tar.gz \
  && tar xzf jfs.tar.gz -C /usr/local/bin juicefs \
  && rm jfs.tar.gz \
  && apk add --no-cache \
    fuse

ENTRYPOINT ["juicefs"]