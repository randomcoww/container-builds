# s6 from https://github.com/linuxserver/docker-baseimage-fedora/blob/master/Dockerfile
# based on https://github.com/containers/podman/blob/main/contrib/podmanimage/stable/Containerfile
# replace iptables-legacy with iptables-nft
ARG FEDORA_VERSION=latest

FROM localhost/rootfs-stage:latest AS rootfs-stage

FROM registry.fedoraproject.org/fedora:$FEDORA_VERSION
ARG CODE_VERSION=4.16.1
ARG USER=podman
ARG UID=1000
ARG ARCH=amd64

COPY --from=rootfs-stage /root-out/ /
COPY custom.repo /etc/yum.repos.d/

RUN set -x \
  \
  && rpm --setcaps shadow-utils 2>/dev/null \
  && dnf install -y --setopt=install_weak_deps=False --best \
    ca-certificates \
    podman \
    podman-plugins \
    containernetworking-plugins \
    fuse-overlayfs \
    git-core \
    iproute-tc \
    iptables-nft \
    gzip \
    tar \
    xz \
    jq \
    procps-ng \
    which \
    lsof \
    ldns-utils \
    strace \
    https://github.com/coder/code-server/releases/download/v$CODE_VERSION/code-server-$CODE_VERSION-$ARCH.rpm \
    # kube client
    kubectl \
    helm \
  --exclude \
    container-selinux \
  && dnf autoremove -y \
  && dnf clean all \
  && rm -rf /var/cache /var/log/dnf* /var/log/yum.* \
  \
  && curl -L https://dl.min.io/client/mc/release/linux-amd64/mc -o /usr/local/bin/mc \
  && chmod +x /usr/local/bin/mc \
  \
  && echo '%wheel ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/wheel

COPY /root /

ENV \
  S6_CMD_WAIT_FOR_SERVICES_MAXTIME=0 \
  S6_VERBOSITY=1 \
  USER=podman \
  UID=1000 \
  HOME=/home/podman \
  LANG=C.UTF-8 \
  CODE_PORT=8080

ENTRYPOINT ["/init"]