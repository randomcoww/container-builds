FROM docker.io/alpine:latest as build
ARG REVISION

RUN set -x \
  \
  && apk add --no-cache \
    g++ \
    xz-dev \
    make \
    perl \
    bash \
    cdrkit \
    git \
    openssl \
    coreutils \
  \
  && git clone https://github.com/ipxe/ipxe /ipxe \
  && cd /ipxe \
  && git reset --hard $REVISION

WORKDIR /ipxe/src
COPY config/ config/local/

ARG INTERNAL_CA_CERT

RUN set -x \
  \
  && TARGETARCH=$(arch) \
  && TARGETARCH=${TARGETARCH/aarch64/arm64} \
  \
  && echo -e "$INTERNAL_CA_CERT" > ca-cert.pem \
  && make -j $(getconf _NPROCESSORS_ONLN) \
    bin-$TARGETARCH-efi/ipxe.efi \
    CERT=ca-cert.pem \
    TRUST=ca-cert.pem \
  \
  && mkdir -p /build \
  && mv bin-$TARGETARCH-efi/*.efi /build/

FROM docker.io/busybox:stable-musl

WORKDIR /var/www
COPY --from=build --chown=www-data:www-data /build/ .
USER www-data

ENTRYPOINT [ "httpd", "-f", "-v" ]